set nocompatible
" set syntax=on
syntax on
filetype off

" annoying
set autoindent
set shiftround
set noswapfile
set cindent
set tabstop=2
set shiftwidth=2

" search stuff
set ignorecase 
set smartcase
set incsearch
set showmatch
set hlsearch
set gdefault

set virtualedit+=block

set background=dark
set number
set nu rnu 
set re=2

set scrolloff=8

colorscheme gruvbox
hi Normal guibg=NONE ctermbg=NONE
